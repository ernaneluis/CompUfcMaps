<!DOCTYPE html>
<html>
<head>
  <title>Computação UFC</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="user_nav">
  <% if current_user %>
  <!--Logged in as <%= current_user.email %>.-->
  <%= link_to "Log out".html_safe, log_out_path, :class => "btnCadastro" %>
  <%= link_to "My Places".html_safe, places_path, :class => "btnCadastro" %>
  <% else %>
  <%= link_to "Cadastro".html_safe, sign_up_path, :class => "btnCadastro" %>
  <%= link_to "Log in".html_safe, log_in_path, :class => "btnCadastro" %>
  <% end %>
</div>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>
<%= yield %>

</body>
<footer>
<%= yield :scripts %>
</footer>
</html>
