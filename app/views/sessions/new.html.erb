<%= form_tag sessions_path do %>
<h1 class="title">Log in</h1>
  <table class="tbl-login">
  <tr>
                  <td>
                      <div class="field">
                        <%= label_tag :email %><br />
                        <%= text_field_tag :email, params[:email] %>
                      </div>
                  </td>
                  </tr>
                  <tr>
                  <td>
                  <div class="field">
                    <%= label_tag :password %><br />
                    <%= password_field_tag :password %>
                  </div>
                  </td>
          </tr>
           </table>
          <div class="btnPanel">
  <%= submit_tag "Log in" %>
  <%= submit_tag "Cancelar", :type => 'button', :onclick => "history.back()" %>
  </div>

<% end %>
